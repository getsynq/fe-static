---
import "../styles/global.css";
import { ContactSupportButton } from "@/components/contact-support-button";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/fe-static/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Deployment Unavailable | SYNQ</title>
  </head>
  <body>
    <div
      class="min-h-screen flex items-center justify-center bg-background px-4"
    >
      <div class="max-w-2xl w-full text-center space-y-6">
        <div class="flex justify-center">
          <img src="/fe-static/logo.svg" alt="SYNQ" width={70} height={70} />
        </div>
        <div>
          <div class="space-y-2">
            <h1
              class="text-2xl md:text-3xl font-light tracking-tight text-foreground text-balance"
            >
              US Deployment Available at Request
            </h1>
          </div>
          <p
            class="text-md text-muted-foreground max-w-xl mx-auto leading-relaxed text-pretty mt-4"
          >
            Your account is not available in our US cluster. To enable US
            deployment please get in touch with your SYNQ account manager.
          </p>
        </div>
        <div class="pt-2">
          <ContactSupportButton />
        </div>
        <div class="mt-[80px] pt-6 border-t border-border">
          <p class="text-sm text-muted-foreground">
            Need immediate assistance?{" "}
            <a
              href="https://docs.synq.io/introduction"
              class="text-foreground hover:underline font-medium"
            >
              View documentation
            </a>
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
